.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__username 
        = current_user.name
      %ul.side-header__box__list
        %li.side-header__box__edit
          = link_to new_group_path  do
            = icon('fas', 'edit')
        %li.side-header__box__cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group__to-detail" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

      

